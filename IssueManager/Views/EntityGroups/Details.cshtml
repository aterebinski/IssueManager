@model IssueManager.Models.EntityGroupElementsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>EntityGroup</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
   
    </dl>
     <h4>Entities</h4>
    <dl class="row">
        @for (var i = 0; i< Model.Entities.Count; i++)
       {
        <dt class = "col-sm-2">
            @Model.Entities[i].Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(m=>Model.IsChecked[Model.Entities[i].Id])
        </dd>
       }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
